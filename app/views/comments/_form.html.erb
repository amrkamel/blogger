<h3>Post a Comment</h3>
<p>
  <%= form_for [@article, @comment] do |f| %>
    <p>
      <%= f.label :author_name, 'Blogger Name: ' %>
      <%= f.text_field :author_name %>
    </p>
    <p>
      <%= f.label :body, 'Comment: ' %>
      <%= f.text_field :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
</p>
