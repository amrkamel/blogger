<h1>New Article</h1>
<%= form_for @article do |f| %>
    <ul>
      <p>
        <% @article.errors.full_messages.each do |error_message| %>
          <li>
            <%= error_message %>
          </li>
        <% end %>
      </p>
      <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :body %>
        <%= f.text_field :body %>
      </p>

      <p>
        <%= f.submit %>
      </p>
    </ul>
<% end %>
